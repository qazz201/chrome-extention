{
  "name": "Devtools Extension",
  "description": "First extention!",
  "version": "1.0",
  "manifest_version": 3,
   "devtools_page": "devtools-page.html",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "web-requests.js" ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "activeTab"
  ]
}