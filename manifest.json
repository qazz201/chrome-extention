{
  "name": "CT4 Eng",
  "description": "Devtools extension for Salesforce Requests monitoring",
  "version": "1.0",
  "manifest_version": 3,
   "devtools_page": "./devtools/index.html",
  "action": {
    "default_popup": "./popup/index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "web-requests.js" ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "webRequest",
    "webNavigation",
    "tabs",
    "activeTab"
  ]
}